pipeline{
    agent any
    environment {
        diretorio = "$WORKSPACE/Prova-N2-2_app-fast"
    }
    stages {
        stage('Preparando workpace') {
            steps {
                echo 'Preparando workpace'
                dir("$diretorio") {
                    sh 'gradle  wrapper'
                }
            }
        }
        stage('testes de unidade') {
            steps {
                echo 'testes de unidade'
                dir("$diretorio") {
                    sh './$WORKSPACE/Prova-N2-2_app-fast/gradlew test'
                }
            }
        }
        stage('build do apk') {
            steps {
                echo 'build do apk'
                dir("$diretorio") {
                    sh './$WORKSPACE/Prova-N2-2_app-fast/gradlew assembleRelease'
                }
            }
        }
        stage('arquivar apk') {
            steps {
                echo 'arquivar apk'
                archiveArtifacts artifacts: '**/app-release-unsigned.apk', fingerprint:true , allowEmptyArchive:false
                cho 'apk arquivado'
            }
        }
















    }
}